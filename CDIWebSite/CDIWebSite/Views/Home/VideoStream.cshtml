@using CDIWebSite.Models
@model CDIWebSite.Models.PreachingsVM
@{
    ViewBag.Title = "VideoStream";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/Stream.css" rel="stylesheet" />
    <style>
        b.nav-bar-link-P {
            color: #FBE05E;
            text-align: right;
        }
    </style>
</head>

<section class="tm-mb-1" id="about">
    <div class="tm-row tm-about-row">
        <div class="tm-section-1-l">
            @Html.Raw(Model.VideoVideo)
        </div>
        <article class="tm-section-1-r tm-bg-color-8">
            <b class="tm-mb-2 tm-title-color">Nombre de Video</b>
            <i>@Model.TituloVideo</i>
            <hr />
            <b class="tm-mb-2 tm-title-color">Descripción del video</b>
            <i>@Model.DescripcionVideo</i>
            <hr />
            <b class="tm-mb-2 tm-title-color">Predicador</b>
            <i>@Model.PredicadorVideo</i>
            <hr />
            <b class="tm-mb-2 tm-title-color">Cita Biblica</b>
            <i>@Model.CitasVideo</i>
        </article>
    </div>
</section>
