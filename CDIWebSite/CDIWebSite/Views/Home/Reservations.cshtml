@model CDIWebSite.Models.InscriptionsVM

@{
    ViewBag.Title = "Reservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

    <div class="container">

        <div class="stepwizard">
            <div class="stepwizard-row setup-panel">
                <div class="stepwizard-step">
                    <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>

                </div>
                <div class="stepwizard-step">
                    <a href="#step-2" type="button" class="btn btn-default btn-circle" enable="enable">2</a>

                </div>
                <div class="stepwizard-step">
                    <a href="#step-3" type="button" class="btn btn-default btn-circle" enable="enable">3</a>
                </div>    

                <div class="stepwizard-step">
                    <a href="#step-4" type="button" class="btn btn-default btn-circle" enable="enable">4</a>
                </div>
                
                <div class="stepwizard-step">
                    <a href="#step-5" type="button" class="btn btn-default btn-circle" enable="enable">5</a>
                </div>    
                
                <div class="stepwizard-step">
                    <a href="#step-6" type="button" class="btn btn-default btn-circle" enable="enable">6</a>
                </div>
                
                <div class="stepwizard-step">
                    <a href="#step-7" type="button" class="btn btn-default btn-circle" enable="enable">7</a>
                </div>            

                <div class="stepwizard-step">
                    <a href="#step-8" type="button" class="btn btn-default btn-circle" enable="enable">8</a>
                </div>     
            </div>
        </div>

        <form role="form">

            <div class="row setup-content" id="step-1">
                <div class="col-xs-12">
                    <div class="col-md-12">
                        <div class="form-group">
                            <br />
                            <center><label class="control-label" style="font-size:30px">Nombre</label></center> 
                            <br />
                                        
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control " } })                    
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div class="form-group">
                            <center><label class="control-label" style="font-size:30px">Apellido</label></center>
                            <br />
                            @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
                
            <div class="row setup-content" id="step-2">
                <div class="col-xs-12">
                    <div class="col-md-12">
                        <div class="form-group">
                            <br />
                            <center><label class="control-label" style="font-size:30px">Correo</label></center>
                            <br />
                            @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                        </div>                        
                    </div>
                </div>
            </div>

            <div class="row setup-content" id="step-3">
                <div class="col-xs-12">
                    <div class="col-md-12">
                        <div class="form-group">
                            <br />
                            <center><label class="control-label" style="font-size:30px">Edad</label></center>
                            <br />
                            @Html.DropDownListFor(x => x.Edad, new List<SelectListItem>(ViewBag.Edades), "Seleccione su Edad", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Edad, "", new { @class = "text-danger" })
                        </div>   
                    </div>
                </div>
            </div>

            <div class="row setup-content" id="step-4">
                <div class="col-xs-12">
                    <div class="col-md-12">
                        <div class="form-group">
                            <br />
                            <center><label class="control-label" style="font-size:30px">Sexo</label></center>
                            <br />
                            @Html.DropDownListFor(x => x.Sexo, new List<SelectListItem>(ViewBag.Gender), "Seleccione un Genero", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Sexo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row setup-content" id="step-5">
                <div class="col-xs-12">
                    <div class="col-md-12">
                        <div class="form-group">
                            <br />
                            <center><label class="control-label" style="font-size:30px">Numero de contacto</label></center>
                            <br />
                            @Html.EditorFor(model => model.NContacto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NContacto, "", new { @class = "text-danger" })
                        </div>                    
                    </div>
                </div>
            </div>

            <div class="row setup-content" id="step-6">
                <div class="col-xs-12">
                    <div class="col-md-12">
                        <div class="form-group">
                            <br />
                            <center><label class="control-label" style="font-size:30px">Fecha de nacimiento</label></center>
                            <br />
                            @Html.EditorFor(model => model.FechaNac, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FechaNac, "", new { @class = "text-danger" })
                        </div>                      
                    </div>
                </div>
            </div>

            <div class="row setup-content" id="step-7">
                <div class="col-xs-12">
                    <div class="col-md-12">
                        <div class="form-group">
                            <br />
                            <center><label class="control-label" style="font-size:30px">Fecha de registro</label></center>
                            <br />
                            @Html.EditorFor(model => model.FechaRegistro, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FechaRegistro, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row setup-content" id="step-8">
                <div class="col-xs-12">
                    <div class="col-md-12">
                        <div class="form-group">
                            <br />
                            <center><label class="control-label" style="font-size:30px">Evento</label></center>
                            <br />
                            @Html.EditorFor(model => model.IdEvento, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.IdEvento, "", new { @class = "text-danger" })
                        </div>
                        <button class="btn btn-success btn-lg pull-right" type="submit">Enviar</button>
                    </div>
                </div>
            </div>
        </form>

    </div>

}

<style>
    body {
        margin-top: 40px;
    }

    .stepwizard-step p {
        margin-top: 10px;
    }

    .stepwizard-row {
        display: table-row;
    }

    .stepwizard {
        display: table;
        width: 100%;
        position: relative;
    }

    .stepwizard-step button[disabled] {
        opacity: 1 !important;
        filter: alpha(opacity=100) !important;
    }

    .stepwizard-row:before {
        top: 14px;
        bottom: 0;
        position: absolute;
        content: " ";
        width: 100%;
        height: 1px;
        background-color: #ccc;
        z-order: 0;
    }

    .stepwizard-step {
        display: table-cell;
        text-align: center;
        position: relative;
    }

    .btn-circle {
        width: 50px;
        height: 50px;
        text-align: center;
        padding: 6px 0;
        font-size: 12px;
        line-height: 1.428571429;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items:center;
    }

    .form-control{
        display:block;
        height:45px;
        font-size: 18px;
    }

    
</style>



@section Scripts{

<script>
        $(document).ready(function () {

            var navListItems = $('div.setup-panel div a'),
                    allWells = $('.setup-content'),
                    allNextBtn = $('.nextBtn');

            allWells.hide();

            navListItems.click(function (e) {
                e.preventDefault();
                var $target = $($(this).attr('href')),
                        $item = $(this);

                if (!$item.hasClass('disabled')) {
                    navListItems.removeClass('btn-primary').addClass('btn-default');
                    $item.addClass('btn-primary');
                    allWells.hide();
                    $target.show();
                    $target.find('input:eq(0)').focus();
                }
            });

            allNextBtn.click(function () {
                var curStep = $(this).closest(".setup-content"),
                    curStepBtn = curStep.attr("id"),
                    nextStepWizard = $('div.setup-panel div a[href="#' + curStepBtn + '"]').parent().next().children("a"),
                    curInputs = curStep.find("input[type='text'],input[type='url']"),
                    isValid = true;

                $(".form-group").removeClass("has-error");
                for (var i = 0; i < curInputs.length; i++) {
                    if (!curInputs[i].validity.valid) {
                        isValid = false;
                        $(curInputs[i]).closest(".form-group").addClass("has-error");
                    }
                }

                if (isValid)
                    nextStepWizard.removeAttr('disabled').trigger('click');
            });

            $('div.setup-panel div a.btn-primary').trigger('click');
        });
</script>


    <script>

        $(document).ready(function () {

            var i = 0;
            $("#FormHiden").hide();
            var Form = $("#FormHiden");

            $("#Next").on('click', function (e) {

                if (!i) {
                    i = 1;
                    Form.show('slow');
                } else {
                    i = 0;
                    Form.hide('slow');
                }

            });

        });

    </script>

}
